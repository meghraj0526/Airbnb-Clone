<% layout("layouts/boilerplate") %>
<div class="row">
  <div class="col-8 offset-3 mt-3">
    <h3><%= listing.title %></h3>
  </div>
  <div class="card col-6 offset-3 show-card listing-card">
    <img
      src="<%= listing.image.url %>"
      class="card-img-top show-img"
      alt="listing_img"
    />
    <div class="card-body">
      <p class="card-text">
        Owned By: <b><i><%= listing.owner.username %></i></b>
      </p>
      <p class="card-text"><%= listing.description %></p>
      <p class="card-text"><%= listing.price.toLocaleString("en-IN") %></p>
      <p class="card-text"><%= listing.location %></p>
      <p class="card-text"><%= listing.country %></p>
    </div>
  </div>
  <br />

  <% if(currentUser && currentUser._id.equals(listing.owner._id)) { %>
  <div class="btns">
    <a
      href="/listings/<%= listing._id %>/edit"
      class="btn btn-dark col-1 offset-3 add-btn"
      >Edit</a
    >

    <form method="post" action="/listings/<%= listing._id %>?_method=DELETE">
      <button class="btn btn-dark offset-5">Delete</button>
    </form>
  </div>
  <% } %> <% if(currentUser) { %>
  <hr class="col-8 offset-3 mt-4 mb-4" />
  <div class="col-8 offset-3">
    <h4>Leave a Review</h4>
    <form
      class="mb-3 needs-validation"
      action="/listings/<%= listing.id %>/reviews"
      method="POST"
      novalidate
    >
      <div class="mb-3 mt-3">
        <label for="rating" class="form-label">Rating</label>
        <fieldset class="starability-grow">
          <input
            type="radio"
            id="no-rate"
            class="input-no-rate"
            name="review[rating]"
            value="1"
            checked
            aria-label="No rating."
          />
          <input
            type="radio"
            id="first-rate1"
            name="review[rating]"
            value="1"
          />
          <label for="first-rate1" title="Terrible">1 star</label>
          <input
            type="radio"
            id="first-rate2"
            name="review[rating]"
            value="2"
          />
          <label for="first-rate2" title="Not good">2 stars</label>
          <input
            type="radio"
            id="first-rate3"
            name="review[rating]"
            value="3"
          />
          <label for="first-rate3" title="Average">3 stars</label>
          <input
            type="radio"
            id="first-rate4"
            name="review[rating]"
            value="4"
          />
          <label for="first-rate4" title="Very good">4 stars</label>
          <input
            type="radio"
            id="first-rate5"
            name="review[rating]"
            value="5"
          />
          <label for="first-rate5" title="Amazing">5 stars</label>
        </fieldset>
      </div>

      <div class="mb-3 mt-3">
        <label for="comment" class="form-label">Comments</label>
        <textarea
          id="comment"
          name="review[comment]"
          rows="4"
          cols="30"
          class="form-control"
          required
        ></textarea>
        <div class="invalid-feedback">Please add some Review</div>
      </div>
      <button type="submit" class="btn btn-dark">Submit</button>
    </form>
    <hr class="mt-4 mb-4" />
    <% } %>

    <!-- ALL REVIEWS    -->
    <% if (listing.reviews.length > 0) { %> <% if(!currentUser) { %>
    <div class="col-8 offset-3">
      <hr class="mt-4 mb-4" />
      <% } %>
      <div class="row">
        <h4 class="mb-4">All reviews</h4>
        <% for(review of listing.reviews) { %>
        <div class="card col-5 mb-3 ms-3">
          <div class="card-body">
            <h5 class="card-title mt-2"><%= review.author.username %></h5>
            <p
              class="starability-result card-text"
              data-rating="<%= review.rating %>"
            ></p>
            <p class="card-text">
              <strong>Comment:</strong> <%= review.comment %>
            </p>
          </div>
          <form
            class="mb-2 mt-2"
            method="post"
            action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
          >
            <% if(currentUser) { %>
            <button class="btn btn-sm btn-dark">Delete</button>
            <% } %>
          </form>
        </div>
        <% } %>
      </div>
      <% } %>
    </div>
  </div>
</div>
